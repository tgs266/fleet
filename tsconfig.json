{
    "compilerOptions": {
      "jsx": "react",
      "allowJs": true,
      "types": ["node", "jest"],
      "esModuleInterop": true,
      "module": "es2020",
      "noImplicitAny": true,
      "moduleResolution": "Node",
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "skipLibCheck": true,
      "lib": [
        "es5", "dom"
      ]
    }
} 